{
    "compilerOptions": {
      "allowJs": true,
      "baseUrl": ".",
      "declaration": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "lib": ["DOM", "ESNext"],
      "moduleResolution": "node",
      "noEmitOnError": true,
      "outDir": "./dist",
      "paths": {
        "@/*": ["./src/*"]
      },
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "es5",
      "typeRoots": ["./@types", "./node_modules/@types"]
    },
    "exclude": ["dist", "node_modules"],
    "include": ["src", "global-setup.ts", "playwright.config.ts", "@types"]
  }